@model AsyncInn.Models.HotelRoom

@{
    ViewData["Title"] = "Delete";
}
<head>
    <!--Meta tags for bootstrap...-->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale-1, shrink-to-fit=no" />
    <!--And its CSS-->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css" />
</head>
<h1>Delete a Hotel Room?</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>HotelRoom</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RoomId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RoomId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Rate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Rate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PetFriendly)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PetFriendly)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Hotel)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Hotel.ID)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="HotelId" />
        <input type="hidden" asp-for="RoomNumber" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
